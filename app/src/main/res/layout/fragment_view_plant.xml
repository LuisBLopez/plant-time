<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.ViewPlantFragment">

     <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintStart_toStartOf="parent">
         <TableLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
             <TableRow
                 android:layout_height="wrap_content"
                 android:layout_margin="10dp">
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Name:"
                     android:fontFamily="@font/moontime_regular"
                     android:textSize="40sp"
                     android:textColor="@color/black"
                     android:layout_marginRight="5dp"
                     />
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:textSize="15sp"
                     android:id="@+id/plant_name"
                     android:hint="Name of the plant"
                     android:layout_weight="1"
                     android:maxLines="3"
                     android:ellipsize="end"
                     android:paddingBottom="20dp"
                     />
             </TableRow>
             <TableRow
                 android:layout_height="wrap_content"
                 android:layout_margin="10dp">
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Creator:"
                     android:fontFamily="@font/moontime_regular"
                     android:textSize="40sp"
                     android:textColor="@color/black"
                     android:layout_marginRight="5dp"
                     />
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textSize="15sp"
                     android:id="@+id/plant_creator"
                     android:hint="Creator of the plant"
                     android:layout_weight="1"
                     android:maxLines="3"
                     android:ellipsize="end"
                     android:paddingBottom="20dp"
                     android:scrollHorizontally="true"
                     android:scrollbars="horizontal"
                     />
             </TableRow>
             <TableRow
                 android:layout_height="wrap_content"
                 android:layout_margin="10dp">
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Opened:"
                     android:fontFamily="@font/moontime_regular"
                     android:textSize="40sp"
                     android:textColor="@color/black"
                     android:layout_marginRight="5dp"
                     />
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:id="@+id/expiration_date"
                     android:textSize="15sp"
                     android:hint="Expiration date of the plant"
                     android:layout_weight="1"
                     android:inputType="date"
                     />
             </TableRow>
             <TableRow
                 android:layout_height="wrap_content"
                 android:layout_margin="10dp">
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Letter:"
                     android:fontFamily="@font/moontime_regular"
                     android:textSize="40sp"
                     android:textColor="@color/black"
                     android:layout_marginRight="5dp"
                     />
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:textSize="15sp"
                     android:id="@+id/plant_letter"
                     android:hint="Letter of the plant"
                     android:layout_weight="1"
                     android:maxLines="20"
                     android:scrollbars="vertical"
                     android:paddingBottom="20dp"
                     />
             </TableRow>
         </TableLayout>
     </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>